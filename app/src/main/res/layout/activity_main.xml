<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFCFF"
    android:padding="30dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/timizga_kirish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tizimga kirish"
        android:paddingLeft="10dp"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_telefon_raqam"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="5dp"
        android:inputType="phone"
        android:hint="Telefon raqam"
        android:background="@drawable/bac_1"
        android:padding="10dp"
        app:layout_constraintVertical_bias="0.33"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edt_parol"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="5dp"
        android:hint="Parol"
        android:background="@drawable/bac_1"
        android:padding="10dp"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_royxatdan_otish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ro'yxatdan o'tish"
        android:textColor="#166BFA"
        android:textCursorDrawable="@mipmap/ic_launcher"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_tizimga_kirish"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="#166BFA"
        app:cornerRadius="10dp"
        app:layout_constraintVertical_bias="0.8"
        android:text="Tizimga kirish"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>