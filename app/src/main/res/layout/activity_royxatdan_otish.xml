<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="#FAFCFF"
    tools:context=".royxatdan_otish">

    <TextView
        android:id="@+id/royhatdan_otish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ro'yxatdan o'tish"
        android:paddingLeft="10dp"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:backgroundTint="#166BFA"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintVertical_bias="0.2"
        android:background="@drawable/bac_4"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="97dp"
        android:layout_height="97dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center"
        android:padding="5dp"
        android:scaleType="centerCrop"
        />
    </androidx.cardview.widget.CardView>



    <EditText
        android:id="@+id/edt_ims_familya"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="5dp"
        android:hint="Ism, Familya"
        android:background="@drawable/bac_1"
        android:padding="10dp"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edt_telefon_raqam"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="5dp"
        android:hint="Telefon raqam"
        android:background="@drawable/bac_1"
        android:padding="10dp"
        android:inputType="phone"
        app:layout_constraintVertical_bias="0.42"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/spinner_davlat"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="5dp"
        android:hint="Telefon raqam"
        android:background="@drawable/bac_1"
        android:padding="10dp"
        app:layout_constraintVertical_bias="0.53"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edt_manzil"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="5dp"
        android:hint="Manzil"
        android:background="@drawable/bac_1"
        android:padding="10dp"
        app:layout_constraintVertical_bias="0.64"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edt_parol"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="5dp"
        android:hint="Parol"
        android:background="@drawable/bac_1"
        android:padding="10dp"
        app:layout_constraintVertical_bias="0.75"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_tizimga_kirish"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="#166BFA"
        app:cornerRadius="10dp"
        app:layout_constraintVertical_bias="0.9"
        android:text="Ro'yxatdan o'tish"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        />
</androidx.constraintlayout.widget.ConstraintLayout>